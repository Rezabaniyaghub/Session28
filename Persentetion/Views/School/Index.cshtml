@model List<Models.SchoolModel>
@{
    ViewData["title"] = "School list";
}
<div class="row">
     
    
        <a asp-action="Create" class="btn btn-primary btn-md" mb-2"> 
            <i class="fas fa-plus"></i>
            افزودن مدرسه جدید
        </a>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>PhoneNumber</th>
                    <th>Create Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.CreateDate</td>
                        <td>
                          <a href="/School/edit?id=@item.Id" class="btn btn-danger  btn-group " > 
                               <i class="fas fa-edit"> </i>
                              ویرایش </a>

                           <a asp-controller="School" asp-action="Delete" asp-route-id=@item.Id class="btn btn-warning  btn-group " > 
                               <i class="fas fa-trash"> </i>
                               حذف
                           </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </>
</div>
