@model List<Models.SchoolModel>
@{
    ViewData["title"] = "School list";
}
<div class="row">


    <a asp-action="Create" class="btn btn-primary btn-md" mb-2">
        <i class="fas fa-plus"></i>
        افزودن مدرسه جدید
    </a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PhoneNumber</th>
                <th>Create Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.CreateDate</td>
                    <td>
                        <a href="/School/edit?id=@item.Id" class="btn btn-danger  btn-group ">
                            <i class="fas fa-edit"> </i>
                            ویرایش
                        </a>

                        <a href="/ClassRoom/Index?schoolId=@item.Id" class="btn btn-dark  btn-group ">
                            <svg width="16" height="16" fill="currentColor" class="bi bi-bank2" viewBox="0 0 16 16">
                                <path d="M8.277.084a.5.5 0 0 0-.554 0l-7.5 5A.5.5 0 0 0 .5 6h1.875v7H1
                               .5a.5.5 0 0 0 0 1h13a.5.5 0 1 0 0-1h-.875V6H15.5a.5.5 0 0 0 .277-.916l-7.5-5zM12.375
                              6v7h-1.25V6h1.25zm-2.5 0v7h-1.25V6h1.25zm-2.5 0v7h-1.25V6h1.25zm-2.5 0v7h-1.25V6h1
                            .25zM8 4a1 1 0 1 1 0-2 1 1 0 0 1 0 2zM.5 15a.5.5 0 0 0 0 1h15a.5.5 0 1 0 0-1H.5z" />
                            </svg>
                            <i class="bi bi-bank2"></i>
                            کلاس ها
                        </a>
                        <a asp-controller="School" asp-action="Delete" asp-route-id=@item.Id class="btn btn-warning  btn-group ">
                            <i class="fas fa-trash"> </i>
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </>
</div>
